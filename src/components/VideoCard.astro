---
interface Props {
  title: string;
  embedUrl: string;
  youtubeUrl: string;
  isShort?: boolean;
}
const { title, embedUrl, youtubeUrl, isShort = false } = Astro.props;
---
<div class="bg-[#f8f9fa] dark:bg-[#252525] rounded-xl overflow-hidden text-left border border-[#e0e0e0] dark:border-[#444]">
  <div class:list={["relative w-full bg-black", isShort ? "aspect-9/16" : "aspect-video"]}>
    <iframe 
      src={embedUrl} 
      title={title}
      class="absolute inset-0 w-full h-full border-none"
      allowfullscreen 
      loading="lazy"
    ></iframe>
  </div>
  <div class="p-4">
    <h3 class="font-semibold mb-2 text-[#333] dark:text-[#e0e0e0]">{title}</h3>
    <a href={youtubeUrl} target="_blank" class="text-[#007bff] dark:text-[#4dabff] no-underline text-sm hover:underline">
      Watch on YouTube â†’
    </a>
  </div>
</div>